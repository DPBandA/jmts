<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>      
    <converter>
        <converter-id>departmentConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.DepartmentConverter</converter-class>
    </converter>                                    
    <converter>
        <converter-id>clientConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.ActiveClientConverter</converter-class>
    </converter>   
    <converter>
        <converter-id>addressConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.AddressConverter</converter-class>
    </converter>   
    <converter>
        <converter-id>businessOfficeConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.BusinessOfficeConverter</converter-class>
    </converter>   
    <converter>
        <converter-id>classificationConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.ClassificationConverter</converter-class>
    </converter>   
    <converter>
        <converter-id>countryConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.CountryConverter</converter-class>
    </converter>   
    <converter>
        <converter-id>employeeConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.EmployeeConverter</converter-class>
    </converter> 
    <converter>
        <converter-id>jobCategoryConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.JobCategoryConverter</converter-class>
    </converter> 
    <converter>
        <converter-id>jobSubCategoryConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.JobSubCategoryConverter</converter-class>
    </converter> 
    <converter>
        <converter-id>sectorConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.SectorConverter</converter-class>
    </converter> 
    <converter>
        <converter-id>serviceConverter</converter-id>
        <converter-class>jm.com.dpbennett.business.entity.converter.ServiceConverter</converter-class>
    </converter> 
    <validator>
        <validator-id>systemOptionValidator</validator-id>
        <validator-class>jm.com.dpbennett.business.entity.validator.SystemOptionValidator</validator-class>
    </validator>
    <validator>
        <validator-id>addressValidator</validator-id>
        <validator-class>jm.com.dpbennett.business.entity.validator.AddressValidator</validator-class>
    </validator>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>jobPricings</from-outcome>
            <to-view-id>/jobPricings.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>jobCostings</from-outcome>
            <to-view-id>/jobCostings.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>userDialog</from-outcome>
            <to-view-id>/common/userDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>employeeDialog</from-outcome>
            <to-view-id>/common/employeeDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>departmentDialog</from-outcome>
            <to-view-id>/common/departmentDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>clientDatabaseDialog</from-outcome>
            <to-view-id>/common/clientDatabaseDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>systemOptionDialog</from-outcome>
            <to-view-id>/common/systemOptionDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>foodFactoryDialog</from-outcome>
            <to-view-id>/foodsdb/foodFactoryDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>complianceSurveyDialog</from-outcome>
            <to-view-id>/cdb/cdbComplianceSurveyDialogPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    
    <lifecycle>
        <phase-listener id="nocache">jm.com.dpbennett.jmts.utils.CacheControlPhaseListener</phase-listener>
    </lifecycle>
    
    <managed-bean>
        <managed-bean-name>clientManager</managed-bean-name>
        <managed-bean-class>jm.com.dpbennett.business.entity.management.ClientManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
   
</faces-config>
